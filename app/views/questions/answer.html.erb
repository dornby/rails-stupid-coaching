<div class="conversation">
  <div class="you">
    <%= params[:question] %>
    <br>
    <i>- You</i>
  </div>
  <div class="coach">
    <strong>
    <% if params[:question][-1] == "?"%>
      <%= "Silly question, get dressed and go to work!" %>
    <% elsif params[:question] == "I am going to work"%>
      <%= "Great!" %>
    <% else %>
      <%= "I don't care, get dressed and go to work!" %>
    <% end %>
    </strong>
    <br>
    <i>- Your coach</i>
  </div>
  <%= link_to "Ask a new question", ask_path %>
</div>
